%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Python style for highlighting
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\newcommand\pythonstyle{%
\defaultstyle\lstset{%
	language=Python,%
	frame=single,%
	stringstyle=\color{deepgreen},%
	morekeywords={self},% 			Add keywords here
	emph={MyClass,__init__}% 		Custom highlighting
}%
}
% Python environment
\lstnewenvironment{python}[1][]{\pythonstyle\lstset{#1}}{}
% Python for external files
\newcommand\pythonexternal[2][]{\begin{center}\pythonstyle\lstinputlisting[#1]{#2}\end{center}}
% Python for inline (No Frame by default)
\newcommand\pythoninline[1]{\pythonstyle\lstinline!#1!}

%%%%%%% No Frame Version %%%%%%%
\newcommand\pythonstyleNoFrame{\pythonstyle\lstset{frame=none}}
% Python environment
\lstnewenvironment{pythonNoFrame}[1][]{\pythonstyleNoFrame\lstset{#1}}{}
% Python for external files
\newcommand\pythonexternalNoFrame[2][]{\pythonstyleNoFrame\lstinputlisting[#1]{#2}}
% Python for inline (No Frame by default)
\let\pythoninlineNoFrame\pythoninline

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% C++ style for highlighting
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\newcommand\cppstyle{%
\defaultstyle\lstset{%
	language=C++,%
	frame=single,%
    	stringstyle=\color{turquoise}%
	}%
}
% C++ environment
\lstnewenvironment{cpp}[1][]{\cppstyle\lstset{#1}} {}
% C++ for external files: \cppexternal{<file>}
\newcommand\cppexternal[2][]{\begin{center}\cppstyle\lstinputlisting[#1]{#2}\end{center}}
% C++ for inline: \cppinline{<code>} (no Frame by default)
\newcommand\cppinline[1]{{\cppstyle\lstinline!#1!}}

%%%%%%% No Frame Version %%%%%%%
\newcommand\cppstyleNoFrame{\cppstyle\lstset{frame=none}}
% C++ environment
\lstnewenvironment{cppNoFrame}[1][]{\cppstyleNoFrame\lstset{#1}}{}
% C++ for external files: \cppexternal{<file>}
\newcommand\cppexternalNoFrame[2][]{\cppstyleNoFrame\lstinputlisting[#1]{#2}}
% C++ for inline: \cppinline{<code>} (no Frame by default)
\let\cppinlineNoFrame\cppinline

