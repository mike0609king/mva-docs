	frame=single,%
	morekeywords={INIT,FOR,FOREACH,TO,DOWNTO,IF,ELSE,OTHERWISE,AS,DEFINE,WITH,AKA,WHILE,DO},%
    	stringstyle=\color{turquoise}%
