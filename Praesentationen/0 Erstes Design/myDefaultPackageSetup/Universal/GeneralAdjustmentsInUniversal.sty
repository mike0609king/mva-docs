\newcommand{\arrow}{$\rightarrow${ }}
\newcommand{\narrow}{\newline{}$\rightarrow${ }}

% characters on top
\newcommand{\overarrow}[1]{$\overset{#1}{\rightarrow}${ }}
\newcommand{\arrowF}{\overarrow{F}} % follows
\newcommand{\arrowD}{\overarrow{D}} % defined as
\newcommand{\arrowB}{\overarrow{B}} % example
\newcommand{\arrowK}{\overarrow{K}} % Comment
\newcommand{\arrowsF}{\overarrow{sF}} % should Follow
\newcommand{\arrowA}{$\overset{A}\leftrightarrow${ }}

% characters on top and newline
\newcommand{\noverarrow}[1]{\newline{}$\overset{#1}{\rightarrow}${ }}
\newcommand{\narrowF}{\noverarrow{F}} % follows
\newcommand{\narrowD}{\noverarrow{D}} % defined as
\newcommand{\narrowB}{\noverarrow{B}} % example
\newcommand{\narrowK}{\noverarrow{K}} % Comment
\newcommand{\narrowsF}{\noverarrow{sF}} % should Follow
\newcommand{\narrowA}{$\newline\overset{A}\leftrightarrow${ }}

